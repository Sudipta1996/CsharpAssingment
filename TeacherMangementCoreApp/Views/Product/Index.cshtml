@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class ="col-6">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary"></a>
            Add New Product
        </div>

    </div>



<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Product Id
            </th>
            <th>
                Product Name
            </th>
            <th>
                DisplayOrder 
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.ProductId
                </td>
                <td width ="30%">
                    @obj.ProductName
                </td>
                <td width ="30%">
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-35 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.ProductId" >Edit</a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.ProductId" >Delete</a>
                   
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
